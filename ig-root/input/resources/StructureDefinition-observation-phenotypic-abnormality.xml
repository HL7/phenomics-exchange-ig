<?xml version="1.0" encoding="UTF-8"?>
<StructureDefinition xmlns="http://hl7.org/fhir" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://hl7.org/fhir http://hl7.org/fhir/R4/fhir-single.xsd">
	<id value="observation-phenotypic-abnormality" />
	<text>
		<status value="additional" />
		<div xmlns="http://www.w3.org/1999/xhtml">
			Some text in the div tag.
		</div>
	</text>
	<url value="http://github.com/phenopackets/core-ig/StructureDefinition/observation-phenotypic-abnormality" />
	<name value="ObservationPhenotypicAbnormality" />
	<title value="Observation, phenotypic abnormality" />
	<status value="draft" />
	<description value="An Observation profile to capture phenotypic abnormalities." />
	<fhirVersion value="4.0.1" />
	<kind value="resource" />
	<abstract value="false" />
	<type value="Observation" />
	<baseDefinition value="http://hl7.org/fhir/StructureDefinition/Observation" />
	<derivation value="constraint" />
	<differential>
		<element id="Observation.code">
			<path value="Observation.code" />
			<binding>
				<strength value="required" />
				<valueSet value="http://github.com/phenopackets/core-ig/ValueSet/phenotypic-abnormality" />
			</binding>
		</element>
		<element id="Observation.value[x]">
			<path value="Observation.value[x]" />
			<type>
				<code value="boolean" />
			</type>
		</element>

		<!-- slicing on code.coding.system AND code.coding.code for the severity 
			and modifiers components -->
		<element>
			<path value="Observation.component" />
			<slicing>
				<discriminator>
					<type value="value" />
					<path value="code.coding.system" />
				</discriminator>
				<discriminator>
					<type value="value" />
					<path value="code.coding.code" />
				</discriminator>
				<discriminator>
					<type value="type" />
					<path value="value" />
				</discriminator>
				<description value="Slicing for severity and clinical modifier(s)" />
				<ordered value="false" />
				<rules value="open" />
			</slicing>
		</element>

		<!-- Severity slice -->
		<element>
			<path value="Observation.component" />
			<sliceName value="Severity" />
			<short value="Slice to hold phenotype abnormality severity, short."/>
			<definition value="Slice to hold phenotype abnormality severity, definition." />
			<max value="1" />
		</element>
		<element>
			<path value="Observation.component.code.coding.system" />
			<fixedUri value="http://github.com/phenopackets/core-ig/CodeSystem/hpo" />
		</element>
		<element>
			<path value="Observation.component.code.coding.code" />
			<fixedCode value="HP:0012824" />
		</element>
		<element>
			<path value="Observation.component.value[x]" />
			<min value="1" />
			<type>
				<code value="CodeableConcept" />
			</type>
			<binding>
				<strength value="required" />
				<valueSet value="http://github.com/phenopackets/core-ig/ValueSet/phenotypic-severity" />
			</binding>
		</element>

		<!-- Clinical modifier slice -->
		<element>
			<path value="Observation.component" />
			<sliceName value="ClinicalModifier" />
			<definition value="Slice to hold phenotype clinical modifier" />
			<max value="*" />
		</element>
		<element>
			<path value="Observation.component.code.coding.system" />
			<fixedUri value="http://github.com/phenopackets/core-ig/CodeSystem/hpo" />
		</element>
		<element>
			<path value="Observation.component.code.coding.code" />
			<fixedCode value="HP:0012823" />
		</element>
		<element>
			<path value="Observation.component.value[x]" />
			<min value="1" />
			<type>
				<code value="CodeableConcept" />
			</type>
			<binding>
				<strength value="required" />
				<valueSet value="http://github.com/phenopackets/core-ig/ValueSet/phenotypic-modifier" />
			</binding>
		</element>


		<!-- Slicing on .code and type to allow 0-2 instances of age representation. 
			One is Quanity, other is CodableConcept -->
		<!-- This could made to have max 1 to force either CodeableConcept or Quantity, 
			but that's too strong of a constraint at this point. We should allow both 
			for now. -->

		<!-- Onset CodeableConcept slice -->
		<element>
			<path value="Observation.component" />
			<sliceName value="OnsetCodeableConcept" />
			<max value="1" />
		</element>
		<element>
			<path value="Observation.component.code.coding.system" />
			<fixedUri value="http://github.com/phenopackets/core-ig/CodeSystem/hpo" />
		</element>
		<element>
			<path value="Observation.component.code.coding.code" />
			<fixedCode value="HP:0003674" />
		</element>
		<element>
			<path value="Observation.component.value[x]" />
			<min value="1" />
			<type>
				<code value="CodeableConcept" />
			</type>
			<binding>
				<strength value="required" />
				<valueSet value="http://github.com/phenopackets/core-ig/ValueSet/phenotypic-onset" />
			</binding>
		</element>

		<!-- Onset Quantity slice -->
		<element>
			<path value="Observation.component" />
			<sliceName value="OnsetQuantity" />
			<max value="1" />
		</element>
		<element>
			<path value="Observation.component.code.coding.system" />
			<fixedUri value="http://github.com/phenopackets/core-ig/CodeSystem/hpo" />
		</element>
		<element>
			<path value="Observation.component.code.coding.code" />
			<fixedCode value="HP:0003674" />
		</element>
		<element>
			<path value="Observation.component.value[x]" />
			<min value="1" />
			<type>
				<code value="Quantity" />
			</type>
		</element>

	</differential>
</StructureDefinition>
