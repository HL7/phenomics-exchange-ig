<?xml version="1.0" encoding="UTF-8"?>

<Patient xmlns="http://hl7.org/fhir"
	xmlns:h="http://www.w3.org/1999/xhtml"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://hl7.org/fhir http://hl7.org/fhir/R4/fhir-single.xsd http://www.w3.org/1999/xhtml http://hl7.org/fhir/R4/fhir-xhtml.xsd">
	<id value="patient-data" />
	<meta>
		<tag>
			<system
				value="http://github.com/phenopackets/core-ig/ig-tools/tag" />
			<code value="clinical-usecase" />
		</tag>
	</meta>
	<text>
		<status value="generated" />
		<h:div>
			<h:p>Some limited HTML content.</h:p>
		</h:div>
	</text>

	<!-- This is a US Core based extension to capture birth sex. Extension: 
		https://www.hl7.org/fhir/us/core/StructureDefinition-us-core-birthsex.html -->
	<extension
		url="http://hl7.org/fhir/us/core/StructureDefinition/us-core-birthsex">
		<valueCode value="F" />
	</extension>
	
	<identifier>
		<system value="http://example.com/mrn" />
		<value value="123" />
	</identifier>
	<name>
		<family value="Doe" />
		<given value="Jane" />
	</name>

	<!-- One place to capture the "female" info from the use case but this is 
		administrative in nature. We'll also capture it as karyotypic sex XX in the 
		PP Bundle for demo purposes -->
	<gender value="female" />

</Patient>