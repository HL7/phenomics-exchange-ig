<Bundle xmlns="http://hl7.org/fhir" xmlns:h="http://www.w3.org/1999/xhtml"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://hl7.org/fhir http://hl7.org/fhir/R4/fhir-single.xsd http://www.w3.org/1999/xhtml http://hl7.org/fhir/R4/fhir-xhtml.xsd">
	<id value="bundle-example-1" />
	<type value="transaction" />

	<!-- A Person entry to represent our Patient/patient as a person. Linked to Patient/patient. -->
	<!-- https://www.hl7.org/fhir/person.html -->
	<entry>
		<resource>
			<Person>
				<id value="person" />
				<link>
					<target>
						<reference value="Patient/patient" />
					</target>
				</link>
			</Person>
		</resource>
		<!-- The "request" is to specify how the above resource should be submitted to the FHIR API when this 
			Bundle is sent to the server as a "transaction". So, the request below says "take the above Person instance 
			and submit it to the API with a PUT request to the http:/server/fhir/Person endpoint". All the requests 
			for each entry happen in a transaction and the full Bundle transaction have to succeed before the transaction 
			is committed. See: https://www.hl7.org/fhir/http.html#transaction -->
		<request>
			<method value="PUT" />
			<url value="Person" />
		</request>
	</entry>

	<!-- A Patient entry to represent our Person with a patient role. -->
	<!-- https://www.hl7.org/fhir/patient.html -->
	<entry>
		<resource>
			<Patient>
				<id value="patient" />
			</Patient>
		</resource>
		<request>
			<method value="PUT" />
			<url value="Patient" />
		</request>
	</entry>

</Bundle>